<div>
    {{#each lists}}

        <div class="card" style="width: 18rem;  position: relative;  left: 30px; ">
            <div class="card-body">
                <h4 class="card-title">{{list_name}}</h4>

                {{#each cards}}
                    <h6 class="card-text">{{card_name}}</h6>
                    <a href="/card/{{id}}" class="btn btn-outline-info btn-sm">Details</a>
                {{/each}}

                <a href="/addCard" class="btn btn-outline-success">Add new card</a>
                <p></p>
            </div>
        </div>
        <p></p>

    {{/each}}

</div>
