<div>
    {{#each lists}}

        <div class="card" style="width: 18rem;  position: relative;  left: 30px; ">
            <div class="card-body">
                <h5 class="card-title">{{list_name}}</h5>
                {{#each cards}}
                    <p class="card-text">{{card_name}}</p>
                {{/each}}
                <a href="/addCard" class="btn btn-outline-success">Add new card</a>
            </div>
        </div>
        <p></p>

    {{/each}}
    <a href="/addList" style="margin-left: 30px" class="btn btn-outline-success">Add new list</a>
</div>
