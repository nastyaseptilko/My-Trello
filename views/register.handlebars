<form action="/register" method="post" >
    <h1 >Register:</h1>

    <div class="form-group ">
        <label >Full name</label>
        <input type="text" name="fullName" placeholder="Inter your full name, please" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" name="email" class="form-control" placeholder="Inter your email, please" aria-describedby="emailHelp" required>
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" placeholder="Inter your password,please" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm password</label>
        <input type="password" name="confirmPassword" placeholder="Confirm your password,please" class="form-control" required>
    </div>
    {{#if  error}}
        <div class="error">
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
        </div>
    {{/if}}

    {{#if  errorIsUser}}
        <div class="error">
            <div class="alert alert-danger" role="alert">
                {{errorIsUser}}
            </div>
        </div>
    {{/if}}
    <button type="submit" id="submit" class="btn btn-outline-success">Register now</button>
</form>